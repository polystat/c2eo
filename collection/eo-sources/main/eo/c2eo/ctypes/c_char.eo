+package c2eo.ctypes

[initial] > c_char

  memory > mem

  if. > @
    mem.is-empty
    if.
      write initial
      mem
      seq
    mem

  [value] > write
    if. > @
      value.greater max
      mem.write (((value.add min).mod range).add min)
      if.
        value.less min
        mem.write (((value.add 129).mod range).add max)
        mem.write value

  "char" > type

  4 > bytes

  127 > max

  -128 > min

  256 > range
