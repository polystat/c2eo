+package c2eo.ctypes

[initial] > c_int16

  memory > mem

  if. > @
    mem.is-empty
    if.
      write initial
      mem
      seq
    mem

  [value] > write
    if. > @
      value.greater max
      mem.write (((value.add min).mod range).add min)
      if.
        value.less min
        mem.write (((value.add 32769).mod range).add max)
        mem.write value

  "int16" > type

  4 > bytes

  32767 > max

  -32768 > min

  65536 > range
