+package c2eo.ctypes

+alias org.eolang.txt.sprintf

[initial] > c_bool

  memory > mem

  if. > @
    mem.is-empty
    if.
      write initial
      mem
      seq
    mem

  [value] > write
    if. > @
      value.eq 0
      mem.write FALSE
      mem.write TRUE

  sprintf "%d" as-int > as-string

  $.if 1 0 > as-int

  "bool" > type

  1 > bytes
