+package c2eo.ctypes

+alias org.eolang.txt.sprintf

[] > c_int16

  memory > @

  [value] > write
    -32768 > min
    32767 > max
    65536 > range

    if. > @
      value.greater max
      ^.@.write (((value.add min).mod range).add min)
      if.
        value.less min
        ^.@.write (((value.add 32769).mod range).add max)
        ^.@.write value

  sprintf "%d" $ > as-string

  "int16" > type

  4 > bytes

  32767 > max

  -32768 > min
